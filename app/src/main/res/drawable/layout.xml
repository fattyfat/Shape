<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- 最底层的图片，以x，y轴坐标为中心进行旋转-->
        <rotate
            android:pivotX="0" android:pivotY="0"
            android:fromDegrees="-10" android:toDegrees="-10">
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">

                <Size
                    android:width="100dp"
                    android:height="75dp"/>

                <solid
                    android:color="@color/layer_color1"/>

                <corners
                    android:radius="8dp"/>

            </shape>
        </rotate>
    </item>
    <!-- 第二层的图片，以x，y轴坐标为中心进行旋转-->
    <item>
        <rotate
            android:pivotX="0" android:pivotY="0"
            android:fromDegrees="15" android:toDegrees="15">
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">

                <Size
                    android:width="100dp"
                    android:height="75dp"/>

                <solid
                    android:color="@color/layer_color2"/>

                <corners
                    android:radius="8dp"/>

            </shape>
        </rotate>
    </item>
    <!-- 最上层的图片，以x，y轴坐标为中心进行旋转-->
    <item>
        <rotate
            android:pivotX="0" android:pivotY="0"
            android:fromDegrees="35" android:toDegrees="55">
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">

                <Size
                    android:width="100dp"
                    android:height="75dp"/>

                <solid
                    android:color="@color/layer_color3"/>

                <corners
                    android:radius="8dp"/>

            </shape>
        </rotate>
    </item>
</layer-list>